<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sogou_game_sdk_exit_dialog"
    android:layout_width="267dp"
    android:layout_height="wrap_content"
    android:background="@drawable/sogou_game_sdk_exit_dialog_bg"
    android:orientation="horizontal"
    android:padding="1.5dp" >

    <com.sogou.wan.common.NetworkImageView
        android:id="@+id/sogou_game_sdk_ads_image"
        android:layout_width="fill_parent"
        android:layout_height="119dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/sogou_game_sdk_ads_tips"
        style="@style/sogou_game_sdk_textview_s20_c595959"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sogou_game_sdk_ads_image"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:text="@string/sogou_game_sdk_isexit"
        android:textColor="@color/sogou_game_sdk_color_595959"
        android:textSize="13.5sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sogou_game_sdk_ads_tips"
        android:layout_marginTop="3dp"
        android:padding="8dp" >

        <View
            android:id="@+id/strut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/sogou_game_sdk_ads_yes"
            style="@style/sogou_game_sdk_pay_s20_cffffff"
            android:layout_width="0dp"
            android:layout_height="33.5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@id/strut"
            android:layout_marginRight="9.5dp"
            android:background="@drawable/sogou_game_sdk_pay_ok_red"
            android:text="@string/sogou_game_sdk_yes" />

        <Button
            android:id="@+id/sogou_game_sdk_ads_no"
            style="@style/sogou_game_sdk_pay_s20_cffffff"
            android:layout_width="0dp"
            android:layout_height="33.5dp"
            android:layout_alignLeft="@id/strut"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="9.5dp"
            android:background="@drawable/sogou_game_sdk4_bt_gray"
            android:text="@string/sogou_game_sdk_no" />
    </RelativeLayout>

</RelativeLayout>